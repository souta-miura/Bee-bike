<div class='container'>
    <div class='row'>
        <h4><%= @user.last_name %> <%= @user.first_name %>さんの会員詳細</h4>
    </div>
    <div class='row'>
        <table class='table'>
            <tr>
                <th>会員ID</th>
                <td><%= @user.id %></td>
            </tr>
            <tr>
                <th>氏名</th>
                <td><%= @user.last_name %> <%= @user.first_name %></td>
            </tr>
            <tr>
                <th>フリガナ</th>
                <td><%= @user.last_name_kana %> <%= @user.first_name_kana %></td>
            </tr>
            <tr>
                <th>郵便番号</th>
                <td><%= @user.postal_code %></td>
            </tr>
            <tr>
                <th>住所</th>
                <td><%= @user.address %></td>
            </tr>
            <tr>
                <th>電話番号</th>
                <td><%= @user.phone_number %></td>
            </tr>
            <tr>
                <th>メールアドレス</th>
                <td><%= @user.email %></td>
            </tr>
            <tr>
                <th>会員ステータス</th>
                <td>
                    <% if @user.is_deleted == false %>
                    <div class='label text-success'>有効</div>
                    <% elsif %>
                    <div class='label text-danger'>退会済</div>
                    <% end %>
                </td>
            </tr>
            <tr>
                <td>出品数：<%= user.items.count %>点</td>
            </tr>
        </table>
        <%= link_to '編集する', edit_admin_user_path(@user), class: 'btn btn-success' %>
    </div>
</div>