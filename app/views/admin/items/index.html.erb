<div class='container'>
<h1 class='text-center'>商品一覧</h1>
<table class='table table-hover table-inverse'>
    <thead>
        <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>出品者</th>
            <th>税別価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
        </tr>
    </thead>
    <tbody>
        <% @items.each do |item| %>
        <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item) %></td>
            <td><%= link_to item.user.last_name, admin_user_path(item.user_id) %></td>
            <td><%= item.price %>円</td>
            <td><%= item.genre.name if item.genre %></td>
            <td>
                <% if item.sale_status=='販売中' %>
                <div class='label text-success'>販売中</div>
                <% else %>
                <div class='label text-secondary'>販売停止中</div>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
<div class='row'>
    <div class='col-sm-12 text-center'>
        <%= paginate @items %>
    </div>
</div>
</div>