<header>
    <nav class="navbar1 navbar-expand-lg">
        <div class='container'>
            <ul class='nav navbar-nav navbar-right'>
                <% if user_signed_in? %>
                <li>
                    <%= link_to root_path,class: 'nav-link text-white' do %>
                    <i class="fa-solid fa-magnifying-glass"></i> バイクを探す
                    <% end %>
                </li>
                <li>
                    <%= link_to user_users_path,class: 'nav-link text-white' do %>
                    <i class="fa-solid fa-users"></i> ユーザーを探す
                    <% end %>
