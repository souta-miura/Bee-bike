            </div>
            <div class='row'>
                <div class="mx-auto">
                    <%= render 'admin/searches/search' %>
                </div>
            </div>
            <% else %>
            <div class='row'>
                <a href='/'>
                    <h1><span style='color:#ff4500;'>Bee</span> <span style='color:#696969;'>bike</span></h1>
                </a>
            </div>
            <div class='row'>
                <div class="mx-auto">
                    <%= render 'user/searches/search' %>
                </div>
            </div>
            <% end %>
            <div class='row'>
                <h4>
                    総掲載数<span style='color:#ff4500;'><%= Item.count %></span>件
                </h4>
            </div>
