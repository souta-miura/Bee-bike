        <div class='container'>
            <% if user_signed_in? %>
            <div class='row'>
                <a href='/'>
                    <h1><span style='color:#ff4500;'>Bee</span> <span style='color:#696969;'>bike</span></h1>
                </a>
            </div>
            <div class='row'>
                <div class="mx-auto">
                    <%= render 'user/searches/search' %>
                </div>
            </div>
            <% elsif admin_signed_in? %>
