<div class='container'>
    <div class='row'>
        <h4 style='margin:10px;'>会員情報編集</h4>
    </div>
    <%= form_with model: @user, url: user_user_path do |f| %>
    <div class='row'>
        <div class='col-lg-12'>
            <%= f.label :名前, class: 'col-sm-3', style: 'margin:10px;' %>
            <%= f.text_field :last_name, class: 'col-sm-3', style: 'margin:10px;' %>
            <%= f.text_field :first_name, class: 'col-sm-3', style: 'margin:10px;' %>
        </div>
    </div>
    <div class='row'>
        <div class='col-lg-12'>
            <%= f.label :フリガナ, class: 'col-sm-3', style: 'margin:10px;' %>
            <%= f.text_field :last_name_kana, class: 'col-sm-3', style: 'margin:10px;' %>
            <%= f.text_field :first_name_kana, class: 'col-sm-3', style: 'margin:10px;' %>
        </div>
    </div>
    <div class='row'>
        <div class='col-lg-12'>
            <%= f.label :郵便番号, class: 'col-sm-3', style: 'margin:10px;' %>
            <%= f.text_field :postal_code, autofocus: true, autocomplete: 'postal_code', class: 'col-sm-3', style: 'margin:10px;' %>
        </div>
    </div>
    <div class='row'>
        <div class='col-lg-12'>
            <%= f.label :住所, class: 'col-sm-3', style: 'margin:10px;' %>
            <%= f.text_field :address, autofocus: true, autocomplete: 'address', class: 'col-sm-6', style: 'margin:10px;' %>
        </div>
    </div>
    <div class='row'>
        <div class='col-lg-12'>
            <%= f.label :電話番号, class: 'col-sm-3', style: 'margin:10px;' %>
            <%= f.text_field :phone_number, class: 'col-sm-3', style: 'margin:10px;' %>
        </div>
    </div>
    <div class='row'>
        <div class='col-lg-12'>
            <%= f.label :メールアドレス, class: 'col-sm-3', style: 'margin:10px;' %>
            <%= f.text_field :email, class: 'col-sm-3', style: 'margin:10px;' %>
        </div>
    </div>
    <div class='row'>
        <div class='col-lg-12'>
            <%= f.submit '編集内容を保存', class: 'btn btn-primary col-sm-3', style: 'margin:10px;' %>
            <%= link_to '退会する', user_users_quit_path, class: 'btn btn-danger' %>
        </div>
    </div>
    <% end %>
</div>