<div class='container'>
    <div class='row'>
        <h4 style='margin:10px;'>マイページ</h4>
    </div>
    <div class='row'>
        <div class='col'>
            <h4 style='margin:10px;'>登録情報</h4>
        </div>
        <div class='col'>
            <%= link_to '編集する', edit_user_user_path(@user.id), class: 'btn btn-success' %>
        </div>
    </div>
    <div class='row'>
        <table class='table table-bordered'>
            <tr>
                <td>氏名</td>
                <td><%= @user.last_name %> <%= @user.first_name %></td>
            </tr>
            <tr>
                <td>カナ</td>
                <td><%= @user.last_name_kana %> <%= @user.first_name_kana %></td>
            </tr>
            <tr>
                <td>郵便番号</td>
                <td><%= @user.postal_code %></td>
            </tr>
            <tr>
                <td>住所</td>
                <td><%= @user.address %></td>
            </tr>
            <tr>
                <td>電話番号</td>
                <td><%= @user.phone_number %></td>
            </tr>
            <tr>
                <td>メールアドレス</td>
                <td><%= @user.email %></td>
            </tr>
        </table>
    </div>
    <div class='row'>
        <h4>商品管理</h4>
        <% @items.each do |item| %>
        <div class='col'>
            <%= link_to user_item_path(item) do %>
            <h2><%= item.name %></h2>
            <% if item.image.attached? %>
            <%= image_tag item.image, size: "400x400" %>
            <% else %>
            <%= image_tag 'no_image', size: "400x400" %>
            <% end %>
            <% end %>
        </div>
        <div class='col'>
            <div>本体価格：<h2 style='color:#ff4500;'><%= (item.price*1.1).round.to_i %></h2>円（税込）</div>
            <div>車両説明：<%= item.description %></div>
        </div>
        <% end %>
    </div>
    <div class='row'>
        <p><strong>配送先　　　　　</strong><%= link_to '一覧を見る', user_addresses_path, class: 'btn btn-primary' %></p>
    </div>
    <div class='row'>
        <p><strong>注文履歴　　　　</strong><%= link_to '一覧を見る', user_orders_path, class: 'btn btn-primary' %></p>
    </div>
</div>