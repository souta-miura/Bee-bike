<%= form_with url: user_search_path, method: :get, local: true do |f| %>
    <form><%= f.text_field :content, size: '40x50' %><%= f.submit '検索', class: 'btn btn-primary' %></form>
    <%= f.select :model, options_for_select({ "バイク" => "item", "ユーザー" => "user" }) %>
    <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %>
  <% end %>