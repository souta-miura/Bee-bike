<div class='container'>
<div>
    <h2>配送先登録</h2>
    <%= form_with model: @address, url: user_addresses_path do |f| %>
        <div class='form'>
            <%= f.label :郵便番号（ハイフンなし） %>
            <%= f.text_field :postal_code %>
        
            <%= f.label :住所 %>
            <%= f.text_field :address %>
        
            <%= f.label :宛名 %>
            <%= f.text_field :name %>
        
            <%= f.submit "新規登録", class: 'btn btn-success' %>
        </div>
    <% end %>
</div>

<div class='row'>
    <h4>配送先管理</h4>
<table class='table'>
    <thead>
        <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <% @addresses.each do |address| %>
    <tbody>
        <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
                <%= link_to edit_user_address_path(address.id) do %>
                <i class = "btn btn-sm btn-success">編集する</i>
                <% end %>
            </td>
            <td>
                <%= link_to user_address_path(address.id),method: :delete, "date-confirm" => "本当に削除しますか？" do %>
                <i class = "btn btn-sm btn-danger">削除する</i>
                <% end %>
            </td>
        </tr>
    </tbody>
    <% end %>
</table>
</div>
</div>

