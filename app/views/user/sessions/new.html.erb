<div class='container'>
  <div class='row'>
    <h2 style='margin:10px;'>ログイン</h2>
  </div>
  <div class='row'>
    <h4 style='margin:10px;'>会員の方はこちらからログイン</h4>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class='row' style='margin:10px;'>
    <div class='col-lg-12'>
      <%= f.label :email, 'メールアドレス', class: 'col-sm-3' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'col-sm-3' %>
    </div>
  </div>
  <div class='row' style='margin:10px;'>
    <div class='col-lg-12'>
      <%= f.label :password, 'パスワード', class: 'col-sm-3' %>
    <%= f.password_field :password, autocomplete: "current-password", class: 'col-sm-3' %>
    </div>
  </div>
  <% if devise_mapping.rememberable? %>
  <div class='row' style='margin:10px;'>
    <div class='col-lg-12'>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  </div>
  <% end %>
  <div class='row' style='margin:10px;'>
    <div class='col-lg-12'>
      <%= f.submit "ログイン", class: 'btn btn-primary btn-lg center-block' %>
    </div>
  </div>
<% end %>

<h4 style='margin:10px;'>会員登録がお済みでない方</h4>
<%= link_to 'こちら', new_registration_path(resource_name) %><span>から新規登録を行ってください</span>
</div>
