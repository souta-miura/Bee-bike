<div class='container'>
  <div class='row'>
    <h2 style='margin:10px;'>新規会員登録</h2>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "user/shared/error_messages", resource: resource %>
  <div class='row' style='margin:10px;'>
    <div class='col-lg-12'>
      <%= f.label :名前, class: 'col-sm-2' %>
      <%= f.label :last_name, '(姓)', class: 'col-sm-1' %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: 'last_name', class: 'col-sm-2' %>
      <%= f.label :first_name, '(名)', class: 'col-sm-1' %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: 'first_name', class: 'col-sm-2' %>
    </div>
  </div>
  <div class='row' style='margin:10px;'>
    <div class='col-lg-12'>
      <%= f.label :フリガナ, class: 'col-sm-2' %>
      <%= f.label :last_name_kana, '(セイ)', class: 'col-sm-1' %>
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: 'last_name_kana', class: 'col-sm-2' %>
      <%= f.label :first_name_kana, '(メイ)', class: 'col-sm-1' %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: 'first_name_kana', class: 'col-sm-2' %>
    </div>
  </div>
  <div class='row' style='margin:10px;'>
    <div class='col-lg-12'>
      <%= f.label :email, 'メールアドレス', class: 'col-sm-3' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'col-sm-3' %>
    </div>
  </div>
  <div class='row' style='margin:10px;'>
    <div class='col-lg-12'>
      <%= f.label :postal_code, '郵便番号(ハイフンなし)', class: 'col-sm-3' %>
      <%= f.text_field :postal_code, autofocus: true, autocomplete: 'postal_code', class: 'col-sm-3' %>
    </div>
  </div>
  <div class='row' style='margin:10px;'>
    <div class='col-lg-12'>
      <%= f.label :address, '住所', class: 'col-sm-3' %>
      <%= f.text_field :address, autofocus: true, autocomplete: 'address', class: 'col-sm-5' %>
    </div>
  </div>
  <div class='row' style='margin:10px;'>
    <div class='col-lg-12'>
      <%= f.label :phone_number, '電話番号(ハイフンなし)', class: 'col-sm-3' %>
      <%= f.text_field :phone_number, autofocus: true, autocomplete: 'phone_number', class: 'col-sm-3' %>
    </div>
  </div>
  <div class='row' style='margin:10px;'>
    <div class='col-lg-12'>
      <%= f.label :password, 'パスワード(６文字以上)', class: 'col-sm-3' %>
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'col-sm-3' %>
    </div>
  </div>
  <div class='row' style='margin:10px;'>
    <div class='col-lg-12'>
      <%= f.label :password_confirmation, 'パスワード(確認用)', class: 'col-sm-3' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'col-sm-3' %>
    </div>
  </div>
  <div class='row' style='margin:10px;'>
    <div class='col-lg-12'>
      <%= f.submit "新規登録", class: 'btn btn-success btn-lg center-block' %>
    </div>
  </div>
<% end %>

<h4 style='margin:10px;'>既に登録済みの方</h4>
<%= link_to 'こちら', new_session_path(resource_name) %><span>からログインください</span>
